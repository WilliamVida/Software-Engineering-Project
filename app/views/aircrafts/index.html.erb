<p id="notice"><%= notice %></p>

<h1>List of Aircraft</h1>



<table class="table table-striped col-md-12" id="aircrafts">
  <thead>
    <tr>
      <th class="<%=@name_header%>"><%= link_to "Name", aircrafts_path(:sort => "name"), :id => 'name_header' %></th>
      <th class="<%=@role_header%>"><%= link_to "Role", aircrafts_path(:sort => "role"), :id => 'role_header' %></th>
      <th class="<%=@country_header%>"><%= link_to "Country", aircrafts_path(:sort => "country"), :id => 'country_header' %></th>
      <th class="<%=@year_header%>"><%= link_to "Year", aircrafts_path(:sort => "year"), :id => 'year_header' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aircrafts.each do |aircraft| %>
      <tr>
        <td><%= aircraft.name %></td>
        <td><%= aircraft.role %></td>
        <td><%= aircraft.country %></td>
        <td><%= aircraft.year %></td>
        <td><%= link_to 'Show', aircraft %></td>
        <td><%= link_to 'Edit', edit_aircraft_path(aircraft) %></td>
        <td><%= link_to 'Destroy', aircraft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

